{
    "app-id": "com.ultimaker.Cura",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "18.08",
    "sdk": "org.freedesktop.Sdk",
    "separate-locales": false,
    "finish-args": [
        "--share=network",
        "--socket=wayland",
        "--socket=x11",
        "--device=dri",
        "--filesystem=home"
    ],
    "command": "run",
    "build-options": {
        "strip": false,
        "no-debuginfo": true
    },
    "modules": [
        {
            "name": "Cura",
            "buildsystem": "simple",
            "build-commands": [
                "chmod a+x Ultimaker_Cura-4.3.0.AppImage",
                "./Ultimaker_Cura-4.3.0.AppImage --appimage-extract >/dev/null",
                "chmod -R --reference=Ultimaker_Cura-4.3.0.AppImage squashfs-root",
                "mv squashfs-root/usr/bin /app/bin",
                "mv squashfs-root/usr/share /app/share",
                "sed -i -e 's/Exec.*/Exec=run %F/' squashfs-root/cura.desktop",
                "sed -i -e 's/Icon.*/Icon=com.ultimaker.Cura/' squashfs-root/cura.desktop",
                "mkdir -p /app/share/applications",
                "mkdir -p /app/share/icons/hicolor/256x256/apps",
                "mv squashfs-root/cura.desktop /app/share/applications/com.ultimaker.Cura.desktop",
                "mv squashfs-root/cura-icon.png /app/share/icons/hicolor/256x256/apps/com.ultimaker.Cura.png",
                "mv squashfs-root/AppRun /app/bin/",
                "echo 'QT_QPA_PLATFORM=xcb cura.sh $@' > /app/bin/run",
                "chmod a+x /app/bin/run",
                "rm ./Ultimaker_Cura-4.3.0.AppImage"
            ],
            "sources": [
                {
                    "type": "file",
                    "url": "https://github.com/Ultimaker/Cura/releases/download/4.3.0/Ultimaker_Cura-4.3.0.AppImage",
                    "sha256": "5f083a16752bf0b72a748616696178c3f44e034fa8f2a66321f6b351fd84574a"
                }
            ]
        }
    ]
}
